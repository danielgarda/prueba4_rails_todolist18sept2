


<div class="container">
  <div class="row">
    <% @tasks.each_slice(4) do |row| %>
      <% row.each do |task| %>
        <div class="col"
          <div class="card">
            <%= image_tag task.photo, class: 'card-img-top' %>
            <div class="body">
            <h5> <%= task.name %> </h5>

           
              <% if !task.user_tasks.where(user: current_user).first.nil? %>
                <%= link_to "Hecha", add_user_path(current_user), method: :post, class: 'btn btn-danger' %>
              <% else %>
                <%= link_to "Hacer", add_user_path(current_user), method: :post, class: 'btn btn-success' %>
              <% end %>

            <%= link_to 'Show', task %>
            <%= link_to 'Edit', edit_task_path(task) %>
          </div>
        </div>  
      <% end %>
      <div class="w-100" style="margin-top:20px"></div>
    <% end %>
  </div>
</div>

<%= link_to 'New Task', new_task_path %>

<%= current_user.email %>
